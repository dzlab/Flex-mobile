<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		title="SafePathView">
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:titleContent>
		<s:Label text="Safe Path" color="white"/>
	</s:titleContent>
	<s:titleLayout>
		<s:HorizontalLayout horizontalAlign="center" verticalAlign="middle"/>
	</s:titleLayout>
	
	<s:actionContent>
		<s:Image width="50" height="50" smooth="true" source="@Embed('assets/Path.png')"/>
	</s:actionContent>
	
	<s:navigationContent>
		<s:Button label="Back" />
	</s:navigationContent>
	<s:VGroup left="10" right="10" top="10" bottom="10">
		<s:HGroup width="100%">
			<s:Label height="100%" text="A" verticalAlign="middle"/>
			<s:TextInput width="100%" prompt="Source"/>
		</s:HGroup>
		<s:HGroup width="100%">
			<s:Label height="100%" text="B" verticalAlign="middle"/>
			<s:TextInput width="100%" prompt="Destination"/>
		</s:HGroup>
		<s:Image width="100%" height="100%" smooth="true" source="@Embed('assets/sample_path.PNG')"/>
	</s:VGroup>
	
</s:View>
